<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/style/reports-dues.css">

<div class="dues-main">
    
  <!-- Header -->
   <div class="print-header">
  <div class="shop-name"><%= shopName %></div>
   </div>
  <div class="dues-header">
    <h2>Outstanding / Due Report</h2>
    <div class="header-actions">
      <div class="print-meta">
    Period: <%= from %> to <%= to %><br>
    Generated on: <%= new Date().toLocaleString() %>
  </div>
      <div class="button-group">
        <button type="button" onclick="window.history.back()" class="back-btn">
          â† Back
        </button>
        <button type="button" onclick="window.print()" class="print-btn">
          Print
        </button>
      </div>
    </div>
  </div>

  <!-- Summary -->
  <div class="summary">
    <div class="card highlight">
      <div class="label">Total Outstanding</div>
      <div class="value">
        â‚¹ <%= customers.reduce((sum, c) => sum + Number(c.balance), 0).toFixed(2) %>
      </div>
    </div>

    <div class="card">
      <div class="label">Customers with Due</div>
      <div class="value"><%= customers.length %></div>
    </div>
  </div>

  <!-- Table -->
  <% if (customers.length) { %>
    <table class="report-table">
      <thead>
        <tr>
          <th>Customer</th>
          <th>Phone</th>
          <th class="right">Due Amount</th>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach(c => { %>
          <tr class="row-click"
              onclick="window.location.href='/customers/<%= c.id %>'">
            <td class="customer-name"><%= c.name %></td>
            <td><%= c.phone || '-' %></td>
            <td class="right due-amount">â‚¹ <%= Number(c.balance).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-muted">ğŸ‰ No outstanding dues found.</p>
  <% } %>
</div>