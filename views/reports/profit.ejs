<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/style/reports-profit.css">

<div class="profit-main">
  <div class="print-header">
  <div class="shop-name"><%= shopName %></div>
  </div>
  <div class="profit-header">
    <h2>Profit Report</h2>
    <div class="header-actions">
      <div class="print-meta">
    Period: <%= from %> to <%= to %><br>
    Generated on: <%= new Date().toLocaleString() %>
  </div>
      <div class="button-group">
        <button type="button" onclick="window.history.back()" class="back-btn">
          ← Back
        </button>
        <button type="button" onclick="window.print()" class="print-btn">
          Print
        </button>
      </div>
    </div>
  </div>

  <!-- Filter -->
  <form method="GET" class="filter-bar">
    <input type="date" name="from" value="<%= from %>" required>
    <span class="to-text">to</span>
    <input type="date" name="to" value="<%= to %>" required>
    <button type="submit">Generate</button>
  </form>

  <!-- Summary -->
  <div class="summary">
    <div class="card">
      <div class="label">Total Sales (Excl. GST)</div>
      <div class="value">₹ <%= summary.sales.toFixed(2) %></div>
    </div>

    <div class="card">
      <div class="label">Total Purchase Cost</div>
      <div class="value">₹ <%= summary.purchase.toFixed(2) %></div>
    </div>

    <div class="card highlight">
      <div class="label">Net Profit</div>
      <div class="value">₹ <%= summary.profit.toFixed(2) %></div>
    </div>
  </div>
</div>
