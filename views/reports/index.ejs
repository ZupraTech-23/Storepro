<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/style/reports-index.css">

<div class="reports-main">
  <h2>Reports</h2>

  <div class="reports-grid">
    <!-- Sales -->
    <a href="/reports/sales" class="report-card">
      <div class="title">Sales Report</div>
      <div class="desc">View total sales for a selected period</div>
    </a>

    <!-- Payments -->
    <a href="/reports/payments" class="report-card">
      <div class="title">Payment Report</div>
      <div class="desc">Track payments received by date</div>
    </a>

    <!-- Due -->
    <a href="/reports/dues" class="report-card">
      <div class="title">Outstanding / Due</div>
      <div class="desc">See customers with pending dues</div>
    </a>

    <!-- Stock -->
    <a href="/reports/stock" class="report-card">
      <div class="title">Stock Report</div>
      <div class="desc">View current inventory and stock value</div>
    </a>

    <!-- Profit -->
    <a href="/reports/profit" class="report-card">
      <div class="title">Profit Report</div>
      <div class="desc">Calculate net profit excluding GST</div>
    </a>

    <!-- GST -->
    <a href="/reports/gst-summary" class="report-card">
      <div class="title">GST Summary</div>
      <div class="desc">View GST collected for filing</div>
    </a>
  </div>
</div>
