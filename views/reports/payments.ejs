<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/style/reports-payment.css">

<div class="payments-main">
  <div class="print-header">
  <div class="shop-name"><%= shopName %></div>
  </div>
  <!-- Header -->
  <div class="payments-header">
    <h2>Payment Report</h2>
    <div class="header-actions">
      <div class="print-meta">
    Period: <%= from %> to <%= to %><br>
    Generated on: <%= new Date().toLocaleString() %>
  </div>
      <div class="button-group">
        <button type="button" onclick="window.print()" class="print-btn">
          Print
        </button>
      </div>
    </div>
  </div>

  <!-- Filter -->
  <form method="GET" class="filter-bar">
    <input type="date" name="from" value="<%= from %>" required>
    <span class="to-text">to</span>
    <input type="date" name="to" value="<%= to %>" required>
    <button type="submit">Generate</button>
  </form>

  <!-- Summary -->
  <div class="summary">
    <div class="card highlight">
      <div class="label">Total Received</div>
      <div class="value">₹ <%= summary.total_received %></div>
    </div>

    <div class="card">
      <div class="label">Total Payments</div>
      <div class="value"><%= payments.length %></div>
    </div>
  </div>

  <!-- Table -->
  <% if (payments.length) { %>
    <table class="report-table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Customer</th>
          <th>Invoice</th>
          <th>Mode</th>
          <th class="right">Amount</th>
        </tr>
      </thead>
      <tbody>
        <% payments.forEach(p => { %>
          <tr style="cursor: pointer;" onclick="window.location.href='/bills/<%=p.bill_id%>/payments'">
            <td><%= new Date(p.payment_date).toLocaleDateString('en-IN', {
  day: '2-digit',
  month: 'short',
  year: 'numeric'
}) %></td>
            <td><%= p.customer_name %></td>
            <td>
              <%= p.invoice_no %>
            </td>
            <td>
              <span class="badge <%= p.mode %>">
                <%= p.mode %>
              </span>
            </td>
            <td class="right">₹ <%= p.amount %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p class="text-muted">No payments found.</p>
  <% } %>
</div>
