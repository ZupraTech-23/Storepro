<script>
(function () {
  const wrapper = document.getElementById('backBtnWrapper');
  if (!wrapper) return;

  const path = window.location.pathname;

  // hide back button on these pages
  const HIDE_BACK_ON = [
    '/',
    '/dashboard',
    '/license'
  ];

  const shouldHide = HIDE_BACK_ON.some(p =>
    path === p || path.startsWith(p + '/')
  );

  // also hide if there's no real navigation history
  const noHistory = window.history.length <= 1;

  if (shouldHide || noHistory) {
    wrapper.style.display = 'none';
  }
})();
</script>

</body>
