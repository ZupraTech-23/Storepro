<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/style/customer-index.css">


  <div class="customers-dashboard">

    <!-- Header -->
    <div class="customers-header">
      <h2>Customers</h2>
    </div>

    <!-- Count -->
    <div class="customers-count">
      <span>Total Customers: <%= customers.length %></span>
    </div>

    <!-- Search Bar -->
    <div class="customers-search-box">
      <input 
        type="text" 
        id="customerSearch" 
        placeholder="Search by customer name..." 
        class="customers-search-input"
      >
    </div>

    <!-- Table -->
    <table class="customers-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Outstanding</th>
          <th>Last Activity</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% if (customers && customers.length > 0) { %>
          <% customers.forEach(c => { %>
            <tr style="cursor: pointer;" onclick="window.location.href='/customers/<%= c.id %>'">
              <td><%= c.name %></td>
              <td><%= c.phone || '-' %></td>
              <td class="<%= c.balance > 0 ? 'danger' : 'success' %>">â‚¹ <%= c.balance %></td>
              <td><%= c.last_activity ? new Date(c.last_activity).toLocaleDateString() : '-' %></td>
              <td>View</td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="empty">No customers found</td>
          </tr>
        <% } %>
      </tbody>
    </table>

  </div>

<style>
  .customers-search-box {
    margin-bottom: 20px;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 6px;
  }

  .customers-search-input {
    width: 100%;
    max-width: 400px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
  }

  .customers-search-input:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const searchInput = document.getElementById('customerSearch');
    const tableRows = document.querySelectorAll('.customers-table tbody tr');
    const allCustomers = Array.from(tableRows).filter(row => row.querySelector('td').textContent !== 'No customers found');

    searchInput.addEventListener('input', function() {
      const searchTerm = this.value.toLowerCase();
      let visibleCount = 0;

      allCustomers.forEach(row => {
        const nameCell = row.cells[0]; // Customer Name is in first column
        const customerName = nameCell.textContent.toLowerCase();
        const shouldShow = customerName.includes(searchTerm);
        
        row.style.display = shouldShow ? '' : 'none';
        if (shouldShow) visibleCount++;
      });

      // Show no results message
      if (visibleCount === 0 && allCustomers.length > 0) {
        let noResultsRow = document.getElementById('no-results-customers-row');
        if (!noResultsRow) {
          noResultsRow = document.createElement('tr');
          noResultsRow.innerHTML = '<td colspan="5" class="empty" style="text-align: center; padding: 20px;">No customers match your search</td>';
          noResultsRow.id = 'no-results-customers-row';
          document.querySelector('.customers-table tbody').appendChild(noResultsRow);
        }
      } else {
        const noResultsRow = document.getElementById('no-results-customers-row');
        if (noResultsRow) noResultsRow.remove();
      }
    });
  });
</script>

